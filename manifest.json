{
    "manifest_version": 3,
    "name": "Email Corrector",
    "version": "1.0",
    "description": "A simple Chrome extension",
    "action": {
        "default_popup": "modal_generateEmail.html"
    },
    "permissions": ["activeTab"],
    "background": {
        "service_worker": "assets/js/modal.js"
    },
    "web_accessible_resources": [
      {
          "resources": ["*", "assets/*"],
          "matches": ["<all_urls>"]
      }
    ]
}